{
  "name": "nicla-sense-platform",
  "version": "1.0.0",
  "description": "IoT sensor data platform for Arduino Nicla Sense ME built with SonicJS",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port 8787",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "db:migrate": "wrangler d1 migrations apply DB --local --persist-to=.wrangler/state/v3",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio": "wrangler d1 execute DB --local --command=\"SELECT * FROM sessions\"",
    "db:migration:create": "node scripts/create-migration.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run --grep 'API'",
    "test:db": "vitest run --grep 'Database'",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.19.28",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0",
    "wrangler": "^4.58.0"
  },
  "keywords": [
    "iot",
    "arduino",
    "nicla-sense-me",
    "sensor-data",
    "cloudflare-workers",
    "edge-computing",
    "sonicjs",
    "web-bluetooth"
  ],
  "author": "Your Name",
  "license": "MIT"
}
